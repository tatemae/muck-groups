<% if member? -%>
	<% if !@shared_uploads.empty? %>
	  <div id="shared-files" class="activity_box">
	  	<h2><%= translate('muck.groups.shared_files') %></h2>
		  <ul>
		    <% @shared_uploads.each do |shared_upload| %>
	        <li id="shared_upload_<%= shared_upload.id %>">
						<%= icon_for shared_upload.upload -%>
						<a href="<%=shared_upload.upload.public_filename%>"><%= truncate(sanitize(shared_upload.upload.filename), 100) %>
						<%= link_to translate("%{icon}") % {:icon => image_tag('delete.png', :class => 'png', :width=>'12', :height=>'12')}, user_shared_upload_path(@user, shared_upload), :method => :delete, :title => translate('muck.groups.stop_sharing') -%>
					</li>
	      <% end %>
		  </ul>
	  </div>
	<% end %>
<% end %>